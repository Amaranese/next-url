{
    "compilerOptions": {
      "target": "es5",
      "lib": ["ESNext", "DOM"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve"
    },
    "include": [
      "next-env.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
      "pages/**/*.ts",
      "pages/**/*.tsx",
      "components/**/*.ts",
      "components/**/*.tsx"
    ],
    "exclude": ["node_modules"]
  }